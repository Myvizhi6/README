import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class StudentForm extends Application {
    public void start(Stage stage) {
        TextField tf = new TextField();
        RadioButton m = new RadioButton("M"), f = new RadioButton("F");
        ComboBox<String> cb = new ComboBox<>();
        cb.getItems().addAll("CS", "IT");
        Button b = new Button("Submit");
        TextArea ta = new TextArea();
        b.setOnAction(e -> ta.setText("Submitted"));
        stage.setScene(new Scene(new VBox(tf, m, f, cb, b, ta)));
        stage.show();
    }
    public static void main(String[] args) { launch(); }
}
